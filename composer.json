{
    "name": "ronildo/todo-php",
    "description": "A todo app made with PHP",
    "type": "project",
    "license": "MIT",
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Ronildo\\TodoPhp\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "coffeecode/router": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "league/plates": "^3.5",
        "guzzlehttp/guzzle": "^7.5",
        "symfony/http-foundation": "^6.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
